<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd
        http://www.springframework.org/schema/aop
        http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
        http://www.springframework.org/schema/tx
        http://www.springframework.org/schema/tx/spring-tx.xsd" default-lazy-init="false">


    <bean id="sessionFactory" parent="HibernateMappingConfig"
        class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
        <property name="dataSource" ref="dataSource" />
        <property name="mappingResources">
            <list merge="true"></list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
                <!-- <prop key="hibernate.query.factory_class">org.hibernate.hql.ast.ASTQueryTranslatorFactory</prop>
                <prop key="hibernate.cache.provider_class">org.hibernate.cache.EhCacheProvider</prop> -->
                <prop key="hibernate.jdbc.batch_size">50</prop>
                <!-- <prop key="hibernate.jdbc.fetch_size">100</prop> -->
                <prop key="hibernate.generate_statistics">true</prop>
                <prop key="hibernate.show_sql">true</prop>
            </props>
        </property>
    </bean>

    <bean id="statementSessionFactory" class="com.sldt.framework.orm.hibernate.statement.HibernateStatementSessionFactoryBean"
    init-method="init" destroy-method="destroy">
        <property name="statementResources">
            <list>
                <value>sqlxml/mysql/dmc_sm_auth_sql.xml</value>
                <value>sqlxml/mysql/dmc_sm_extend_sql.xml</value>
                <value>sqlxml/mysql/activiti_process_sql.xml</value>
                <value>sqlxml/mysql/dmc_rest_sql.xml</value>
                <value>sqlxml/mysql/dmc_sm_exPriv_sql.xml</value>
                <value>sqlxml/mysql/dmc_sm_status_sql.xml</value>
            </list>
        </property>
    </bean>

    <!-- Quartz针对不同的数据库有不同的配置在这里 -->
    <bean id="schedulerDelegate" abstract="true">
        <property name="quartzProperties">
            <props>

            </props>
        </property>
    </bean>

</beans>